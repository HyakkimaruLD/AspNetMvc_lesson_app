@using AspNetMvc_lesson_app.Controllers
@using AspNetMvc_lesson_app.Models
@{
    ViewData["Title"] = "About Page";

    var profile = ViewData["Profile"] as Profile;
}

<div class="text-center">
    <h1 class="display-4">Welcome @profile.Name</h1>
    <p>Hello! My name is Vladyslav Chernukha, I am 17 years old, currently finishing 11th grade, and preparing to apply to universities. I know there are many people with much more extensive knowledge of programming than I have, but I believe my knowledge is sufficient to be acknowledged.</p>

    <h2>Skills</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Level</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var skill in profile.Skills)
            {
                <tr>
                    <td>@skill.Title</td>
                    <td>@skill.Level</td>
                </tr>
            }
        </tbody>
    </table>
</div>